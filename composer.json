{
    "name": "tarohida/docker-php8-nginx-postgres-composer",
    "description": "Docker Compose configuration to run PHP8 with Nginx, PHP-FPM, PostgreSQL 10.1 and Composer.",
    "type": "metapackage",
    "license": "MIT",
    "authors": [
        {
            "name": "Taro Hida",
            "email": "sk8trou@gmail.com"
        }
    ],
    "require": {
        "ext-pdo": "*",
        "robmorgan/phinx": "*",
        "slim/slim": "*",
        "slim/psr7": "*",
        "monolog/monolog": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "guzzlehttp/guzzle": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "HttpTests\\": "tests_http"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phinx_create_table": "vendor/bin/phinx create CreateTaskTable",
        "fix_owner": "chown -R 1000.1000 ./db",
        "migrate": "vendor/bin/phinx migrate",
        "rollback": "vendor/bin/phinx rollback"
    }
}
